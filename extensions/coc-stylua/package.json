{
  "name": "coc-stylua",
  "version": "0.1.0",
  "description": "",
  "author": "ph <chenyi.ph@outlook.com>",
  "license": "MIT",
  "keywords": [
    "coc.nvim"
  ],
  "main": "out.js",
  "engines": {
    "coc": "^0.0.82"
  },
  "activationEvents": [
    "onLanguage:lua"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "coc-stylua configuration",
      "properties": {
        "coc-stylua.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable coc-stylua extension"
        },
        "coc-stylua.binPath": {
          "type": "string",
          "default": "",
          "description": "Stylua binary path."
        },
        "coc-stylua.requireConfigFile": {
          "type": "boolean",
          "default": true,
          "description": "require stylua.toml to format."
        }
      }
    },
    "commands": []
  },
  "scripts": {
    "watch": "node esbuild.mjs --watch",
    "build": "node esbuild.mjs",
    "prepare": "node esbuild.mjs"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.6.4",
    "@types/node": "^20.11.5",
    "coc.nvim": "^0.0.83-next.18",
    "esbuild": "^0.19.8",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  }
}
